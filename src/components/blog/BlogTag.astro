---
const { tag } = Astro.props;
---

<p>
    <a href={`/tags/${tag}`}>{tag}</a>
</p>
<style>
    a {
        border-radius: 0.5rem;
        padding: 0.3rem 0.8rem;
        border: solid 1px #737373;
        background-color: #dddddd;
        color: #3a3a3a;
        text-decoration: none;
        &:hover {
            background-color: #e2e2e2;
        }
    }
</style>
